
%main.c-stats-index{role: "main"}

  .u-useful-width.u-margin-constraint     
    %h2.u-margin-top Vue d'ensemble
    .o-layout
      .o-layout__item{:class => "u-1/1 u-1/3@desktop"}      
        .o-card.c-stats-card.c-stats-totalview.c-stats-card--active
          .c-stats-headernumber.c-stats-totalview__number
            =visitor_kpi
          .c-stats-headertext.c-stats-totalview__text
            Visiteurs total
      .o-layout__item{:class => "u-1/1 u-1/3@desktop"}
        %a{href: stats_time_path, class: "c-stats-card-link"}
          .o-card.c-stats-card.c-stats-savedtime
            .c-stats-savedtime__number
              ="#{savedtime_all[:minutes_won]} min #{savedtime_all[:seconds_won]} s"
            .c-stats-headertext.c-stats-savedtime__text
              Temps gagnÃ© par conseiller
      .o-layout__item{:class => "u-1/1 u-1/3@desktop"}


    .o-layout.u-margin-top-small
      .o-layout__item{:class => "u-1/1 u-1/3@desktop"}
        .o-card.ct-gape{'data-loaded'=> "#{visitor_stats_pe.to_json}"}
      .o-layout__item{:class => "u-1/1 u-2/3@desktop"}
        .o-card.ct-gabarline{'data-loaded'=> "#{visitor_stats.to_json}"}
