- e = view_object(:error_view_object, {errors: flash[:error]})

= form_with model: inscription, url: peconnect_question_path, :local => true do |f|

  %h2.c-callback-subtitle Depuis combien de temps êtes-vous inscrit•e à Pôle emploi ?
  .c-question__form
    %fieldset.c-fieldset
      %legend.u-hidden-visually Cochez votre date d'inscription &#xE0;  : appuyez sur Tab pour changer de case, et Entr&#xE9;e pour en choisir un.
      
      = render 'shared/inscription_form_line', {id: 'moins_d_un_an', value: inscription.value, text: 'Moins d\'un an', added_class: "c-radiolabel--callback"} 
      = render 'shared/inscription_form_line', {id: 'plus_d_un_an', value: inscription.value, text: 'Plus d\'un an', added_class: "c-radiolabel--callback"} 
  
  = f.submit 'Je valide', {class: 'c-callback-submit'}
