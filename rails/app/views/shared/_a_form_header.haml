- e ||= OpenStruct.new(has_error:false, main_error:'')
- title ||= nil
- subtitle ||= nil
- youranswer ||= "yes"
- mandatory ||= "yes"


- if mandatory == "yes"
  .c-question-title__warning
    %span
      Les champs marqués d'un
    %span.c-question-title__warning-red
      * 
    %span 
      sont obligatoires

%h1.c-question-title
  - if mandatory == "yes"
    %span.c-question-title__asterisk
      *
  %span.c-question-title__actual
    =title
  - if mandatory != "yes"
    %span.c-question-title__optionnal
      Facultatif

- if youranswer == "yes"
  %h2.c-question-youranswer
    Votre réponse
- elsif youranswer == "plural"
  %h2.c-question-youranswer
    Vos réponses
  
- if subtitle
  .c-question-subtitle
    =subtitle


