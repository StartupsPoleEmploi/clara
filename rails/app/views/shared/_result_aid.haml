- aid ||= {}
- for_id ||= ''
- the_index ||= 1
- v = view_object(:result_aid, {aid: aid, the_index: the_index, for_id: for_id})

.c-result-aid.js-possible-name{"class" => v.css_addendum(the_index)}
  .c-result-aid__text
    %h2.c-result-aid__title
      =link_to v.name, v.link_to_detailed_aid
    .c-result-aid__subtitle
      =link_to v.short_description, v.link_to_detailed_aid
  .c-result-aid__cta
    %a{"href" => v.link_to_detailed_aid}
      %span 
        Voir l'aide 
      %span{"class" => "u-sr-only"}
        =v.name
