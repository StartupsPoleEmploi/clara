- title_data "Clara | Découvrez les aides de retour à l’emploi - un service Pôle emploi"
- nb_of_active_aids = local_assigns[:nb_of_active_aids] || 0
- type_aides = local_assigns[:type_aides] || []
- type_dispositifs = local_assigns[:type_dispositifs] || []
- all_home_filters = local_assigns[:all_home_filters] || []
- larger_container "yes"


.c-newhome
  = render partial: 'shared/home_hero', locals: local_assigns.slice(:url_of_peconnect, :is_peconnect_activated)
  = render partial: 'shared/cookies_banner'
  = render partial: 'shared/home_feat'
  = render partial: 'shared/home_md'
  = render partial: 'shared/home_catalog', locals: {all_home_filters: all_home_filters}
  = render partial: 'shared/home_approved'
  = render partial: 'shared/home_sticky'


  - content_for :footer do
    = render partial: 'shared/footer', locals: {larger_container: "yes", aides: type_aides, dispositifs: type_dispositifs, is_home: "yes"}

