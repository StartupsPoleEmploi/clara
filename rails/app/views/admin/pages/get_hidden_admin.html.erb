<div class="c-superadmin">
  
<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title" id="page-title">
      Outils d'administration
  </h1>
</header>

<div class="grid-flex">
  <div class="grid-col">
    <div class="c-superadmin-card c-superadmin-users">
      <h2>Utilisateurs</h2>
      <% if current_user.role === "superadmin" || current_user.role === "relecteur" %>
        <ul>
          <% if current_user.role === "superadmin" || current_user.role === "relecteur" %>
            <li>
              <%=link_to "Utilisateurs Admin", admin_users_path %>
            </li>
            <li>
              <%=link_to "Utilisateurs API", admin_api_users_path %>
            </li>
          <% end %>
          <% if current_user.role === "superadmin" %>
            <li>
              <%=link_to "Créer un nouvel administrateur", sign_up_path %>
            </li>
          <% end %>
          <% if current_user.role === "relecteur" %>
            <li>
              <%=link_to "Créer un nouveau contributeur", sign_up_path(text: "contributeur") %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div>
          <i>Cette partie est reservée aux administrateurs</i>
        </div>
      <% end %>
      
    </div>
  </div>
  <div class="grid-col">
    <div class="c-superadmin-card c-superadmin-docs">
      <h2>Documentation</h2>
      <% if current_user.role === "superadmin" %>
        <ul>
          <li>
            <%=link_to "Charte éditoriale",  admin_convention_path(Convention.first) %>
          </li>
          <li>
            <%=link_to "Extraction des aides au format CSV", "/admin/aids/export.csv?locale=fr" %>
          </li>
          <li>
            <%=link_to "Liste des variables", admin_variables_path %>
          </li>      
          <li>
            <%=link_to "Explications des règles", admin_explicitations_path %>
          </li>
          <li>
            <%=link_to "Documentation API", "/apidocs", target: "_blank" %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%=link_to "Charte éditoriale",  admin_convention_path(Convention.first) %>
          </li>
          <li>
            <%=link_to "Extraction des aides au format CSV", "/admin/aids/export.csv?locale=fr" %>
          </li>
          <li>
            <%=link_to "Documentation API", "/apidocs", target: "_blank" %>
          </li>
        </ul>
      <% end %>

    </div>
  </div>
  <div class="grid-col"></div>
</div>
<div class="grid-flex">
  <div class="grid-col">
    <div class="c-superadmin-card c-superadmin-stats">
      <h2>Statistiques</h2>
      <% if current_user.role === "superadmin" %>
        <ul>
          <li>
            <%=link_to "Voir les statistiques", ENV["ARA_STATS"] %>
          </li>
          <li>
            <%=link_to "Stratégies de suivi", admin_tracings_path %>
          </li>
          <li>
            <%=link_to "Liste des suivis", admin_traces_path %>
          </li>      
        </ul>
      <% else %>
        <ul>
          <li>
            <%=link_to "Voir les statistiques", ENV["ARA_STATS"] %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="grid-col">
    <div class="c-superadmin-card c-superadmin-actions">
      <h2>Actions</h2>
      <% if current_user.role === "superadmin" %>
        <ul>
          <li>
            <%=link_to "Création de ZRR", admin_get_zrr_path %>
          </li>
          <li>
            <%=link_to "Mettre à jour l'horloge Clara", admin_get_clock_path %>
          </li>
          <li>
            <%=link_to "(Dés)activer PEConnect", admin_get_switch_peconnect_path %>
          </li>
          <li>
            <%=link_to "Voir la file de tâches", '/sidekiq/scheduled' %>
          </li>
          <li>
            <%=link_to "liens cassés (⚠ calcul long)", admin_get_relink_path %>
          </li>
        </ul>   
      <% else %>
        <div>
          <i>Cette partie est reservée aux administrateurs</i>
        </div>
      <% end %>      

    </div>
  </div>
  <div class="grid-col"></div>

 </div>

</div>
