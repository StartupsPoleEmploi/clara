<%- is_activated = local_assigns[:is_activated] %>
<%- activation_text = is_activated ? "Désactiver PE Connect" : "Activer PE Connect" %>

<div style="margin-top: 2rem;margin-left: 2rem;">
  <%= form_with url: admin_post_switch_peconnect_path, local: true, id: 'admin_post_switch_peconnect_form' do |form| %>
    <div class="peconnect-status">
      <% if is_activated %>
        Pe connect est actuellement activé
      <% else  %>
        Pe connect est actuellement désactivé
      <% end %>      
    </div>
    <div>
      <%= form.submit "#{activation_text}", id: 'submit-toggle-peconnect' %>
    </div>
  <% end %>
</div>
