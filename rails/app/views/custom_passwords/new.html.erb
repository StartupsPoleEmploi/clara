<section id="clearance" class="password-reset c-login u-margin-bottom-huge">

<div class="u-margin-bottom-large">
  <div class="c-login-card u-margin-top u-margin-bottom">

    <h1>Récupérer votre mot de passe</h1>
    <p>
      <div>Un email vous sera envoyé.</div>
      <div>Vous devez déjà être inscrit avec cet email.</div>
    </p>

    <%= form_for :password, url: custom_passwords_path do |form| %>
      <div class="text-field">
        <%= form.label :email, "Votre adresse e-mail" %>
        <%= form.text_field :email, type: 'email', "class" => "u-1/1", value: "#{params[:email]}" %>
      </div>
      <div class="submit-field c-login-connect c-login-nextprev">
        <div class="c-login-create c-flexeqal">
          <%= link_to "Annuler", sign_in_path %>
        </div>
        <div class="c-flexeqal">
          <%= form.submit "Suivant" %>
        </div>
      </div>
    <% end %>


  </div>  
</div>


</section>
