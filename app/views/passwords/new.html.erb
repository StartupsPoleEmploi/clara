<section id="clearance" class="password-reset c-login">

  <div class="c-login-card u-margin-top u-margin-bottom">

    <h1>Récupérer votre mot de passe</h1>
    <p>Un email vous sera envoyé si vous êtes déjà inscrit sur la plateforme avec cet email.</p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email' %>
      </div>
      <div class="submit-field c-login-connect">
        <%= form.submit "Réinitialiser mon mot de passe" %>
      </div>
    <% end %>

  </div>
</section>
