- id ||= ""
- value ||= ""
- text ||= ""
- hide_svg ||= false

.c-radiolist__element.u-focusable{tabindex: '0', id: "radio_#{id}"}
  = radio_button_tag "allocation_form[type]", |
      "#{id}", |
      "#{value}" == "#{id}", | 
      id: "#{id}", |
      tabindex: -1, |
      class: 'c-radioinput', | 
      onfocusout: "$('#radio_#{id}').toggleClass( 'is-activated' )", |
      onfocusin: "$('#radio_#{id}').toggleClass( 'is-activated' )" |
  .c-radiolabel{for: "#{id}", class:'u-5/6@tablet u-1/2'}
    ="#{text}"

          
