- v = view_object(:result_list, local_assigns)

.c-result-list{"class" => v.css_root}
  .c-result-header
    %strong.h4-like.c-result-header__title 
      =v.strong_title 
    
    .c-expander-button.c-expander-button--opened.mrs
      %button Cacher

    .c-expander-button.c-expander-button--closed.mrs
      %button Voir

    .c-expander.c-expander--reduceable.c-expander--reduce
      %small Tout replier
      %span.c-expander__svg-container <svg width="30px" height="30px" class="c-expander__svg" id="Calque_1" data-name="Calque 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><title>replier</title><path id="path3_fill" data-name="path3 fill" fill="#057dbc" d="M0,3A3,3,0,0,1,3,0H22a3,3,0,0,1,3,3V22a3,3,0,0,1-3,3H3a3,3,0,0,1-3-3Z"/><path id="path4_fill" data-name="path4 fill" class="clzzh-2" d="M6.75,17l5.75-5.91L18.25,17,20,15.2,12.5,7.49,5,15.2Z"/></svg>

    .c-expander.c-expander--unreduceable.c-expander--reduce
      %small Tout replier
      %span.c-expander__svg-container <svg width="30px" height="30px" class="c-expander__svg" id="Calque_1" data-name="Calque 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><title>replier</title><path id="path3_fill" data-name="path3 fill" fill="lightgrey" d="M0,3A3,3,0,0,1,3,0H22a3,3,0,0,1,3,3V22a3,3,0,0,1-3,3H3a3,3,0,0,1-3-3Z"/><path id="path4_fill" data-name="path4 fill" fill="#fff" d="M6.75,17l5.75-5.91L18.25,17,20,15.2,12.5,7.49,5,15.2Z"/></svg>

    .c-expander.c-expander--expandable.c-expander--expand
      %small Tout déplier
      %span.c-expander__svg-container <svg width="30px" height="30px" class="c-expander__svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><title>deplier</title><g id="Calque_2" data-name="Calque 2"><path id="path3_fill" data-name="path3 fill" fill="#057dbc" d="M0,3A3,3,0,0,1,3,0H22a3,3,0,0,1,3,3V22a3,3,0,0,1-3,3H3a3,3,0,0,1-3-3Z"/><path id="path4_fill" data-name="path4 fill" class="clzzh-2" d="M5,9.8l7.5,7.71L20,9.8,18.25,8,12.5,13.91,6.75,8Z"/></g></svg>

    .c-expander.c-expander--unexpandable.c-expander--expand
      %small Tout déplier
      %span.c-expander__svg-container <svg width="30px" height="30px" class="c-expander__svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><title>deplier</title><g id="Calque_2" data-name="Calque 2"><path id="path3_fill" data-name="path3 fill" fill="lightgrey" d="M0,3A3,3,0,0,1,3,0H22a3,3,0,0,1,3,3V22a3,3,0,0,1-3,3H3a3,3,0,0,1-3-3Z"/><path id="path4_fill" data-name="path4 fill" class="clzzh-2" d="M5,9.8l7.5,7.71L20,9.8,18.25,8,12.5,13.91,6.75,8Z"/></g></svg>


  - if !v.ordered_lines.empty?
    .c-result-list__lines.js-apply
      - v.ordered_lines.each do |line|
        = render 'shared/result_line', {line: line, show_title: true, show_expander: true, clazz: v.clazz}

  - if v.ordered_lines.empty?
    .c-result-list__lines.js-not-apply
      Ne s'applique pas
