<% content_for(:title) { t("helpers.aid.update", name: page.page_title) } %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %> : <%= page.resource.name.truncate(27) %>
  </h1>

  <div>
    <%= link_to(
      t("helpers.aid.detail", name: page.page_title),
      [namespace, page.resource],
      class: "button",
    ) if valid_action?(:show) && show_action?(:show, page.resource) %>
  </div>
</header>

<section class="main-content__body">
  <%= render "form", page: page %>
</section>


<section class="main-content__body c-aid-detail-body">
  <div class="js-tabs" data-tabs-disable-fragment="true">
    <ul class="js-tablist" data-hx="h2" data-tabs-prefix-class="example-tabs" data-tabs-generated-hx-class="focusable_tab_title">
      <li class="js-tablist__item">
        <a href="#tab_1" id="label_tab_1" class="js-tablist__link">Informations générales</a>
      </li>
      <li class="js-tablist__item">
        <a href="#tab_2" id="label_tab_2" class="js-tablist__link">Contenu de l'aide</a>
      </li>
      <li class="js-tablist__item">
        <a href="#tab_3" id="label_tab_3" class="js-tablist__link">Paramètres avancés</a>
      </li>
    </ul>
   <div id="tab_1" class="js-tabcontent">
   </div>
   <div id="tab_2" class="js-tabcontent">
   </div>
   <div id="tab_3" class="js-tabcontent">
   </div>
 </div>
</section>
