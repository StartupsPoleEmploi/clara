      =v.title

  .c-detail-show2.u-useful-width.u-margin-constraint
    .o-layout
      .o-layout__item{:class => "u-1/1 u-3/4@desktop"}
        = render 'shared/eligible_line', {aids: local_assigns[:aids]}

