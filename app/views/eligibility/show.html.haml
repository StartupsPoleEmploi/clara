- v = view_object(:eligible_view, local_assigns)
- title_data v.title_of_tab
- description_data(v.contract_type[:description].to_s.html_safe)

= render 'shared/breadcrumb', {pertype: v.contract_type[:name]}

%main#main.c-eligible-view{role: "main"}

  %h1.c-eligible-title{"class" => v.clazz}
    .c-eligible-title-inside.u-useful-width.u-margin-constraint
      =v.title

  .c-detail-show2.u-useful-width.u-margin-constraint
    .o-layout
      .o-layout__item{:class => "u-1/1 u-3/4@desktop"}
        = render 'shared/eligible_line', {aids: local_assigns[:aids]}

